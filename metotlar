using System;

namespace metotlar
{
    internal class Program
    {
        static int usalma(int taban, int us)
        {
            int result = 1;
            for (int i = 0; i <=us; i++)
                result *= taban;
            return result;
        }
        
        static void Main(string[] args)
        {
            Console.WriteLine(usalma(taban: 2, us: 4));
        }
    }
}
